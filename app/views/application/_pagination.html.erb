<div class='pagination'>
  <% if @page > 1 %>
    <%= form_with url: '/search', method: :get do |form| %>
      <%= form.hidden_field :keywords, value: @keywords %>
      <%= form.button 'Prev', name: 'page', value: @page - 1, class: 'page' %>
    <% end %>
  <% end %>
  <% @pages.times.each do |page| %>
    <%= form_with url: '/search', method: :get do |form| %>
      <%= form.hidden_field :keywords, value: @keywords %>
      <%= form.button page + 1, name: 'page', value: page + 1, class: "page#{@page == page + 1 ? ' active' : ''}" %>
    <% end %>
  <% end %>
  <% if @page < @pages %>
    <%= form_with url: '/search', method: :get do |form| %>
      <%= form.hidden_field :keywords, value: @keywords %>
      <%= form.button 'Next', name: 'page', value: @page + 1, class: 'page' %>
    <% end %>
  <% end %>
</div>